COMPOSE_PROJECT_NAME=azuracast

# Portas para desenvolvimento local (padrão 80/443)
AZURACAST_HTTP_PORT=80
AZURACAST_HTTPS_PORT=443
AZURACAST_SFTP_PORT=2022

# Portas alternativas para produção (quando usar Traefik)
# Descomente e ajuste quando for fazer deploy em produção:
# AZURACAST_HTTP_PORT=10080
# AZURACAST_HTTPS_PORT=10443

# User/Group IDs (ajustar se necessário)
AZURACAST_PUID=1000
AZURACAST_PGID=1000

NGINX_TIMEOUT=1800
